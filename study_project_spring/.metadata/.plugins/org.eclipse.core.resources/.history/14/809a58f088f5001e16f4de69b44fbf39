package study_spring.config.oauth;

import org.springframework.security.oauth2.client.userinfo.DefaultOAuth2UserService;
import org.springframework.security.oauth2.client.userinfo.OAuth2UserRequest;
import org.springframework.stereotype.Service;

import lombok.RequiredArgsConstructor;
import study_spring.domain.User;
import study_spring.repository.UserRepository;

@RequiredArgsConstructor
@Service
public class OAuth2UserCustomService extends DefaultOAuth2UserService {
	
	private final UserRepository userRepository;
	
	@Override
	public OAuthUser loadUser(OAuth2UserRequest userRequest) {
		
		OAuthUser user = super.loadUser(userRequest);
		saveOrUpdate(user);
		return user;
	}
	
	// 유저유무에 따른 업데이트
	private User saveOrUpdate(OAuthUser oAuthUser) {
		
	}
}
